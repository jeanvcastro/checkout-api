{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "sourceMap": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["vitest.config.ts", "node_modules", "dist", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
